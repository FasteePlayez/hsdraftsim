<Window x:Class="hearthstonecopybraskoprojekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hearthstonecopybraskoprojekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="280"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Label x:Name="label1" Grid.Row="2" Grid.Column="1" Content="karta1" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="label2" Grid.Row="2" Grid.Column="2" Content="karta2" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="label3" Grid.Row="2" Grid.Column="3" Content="karta3" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <Button x:Name="NewDraftButton" Grid.Row="3" Grid.Column="3" Margin="30,20,30,20" Content="new draft" Click="newdraft_Click"/>
        <Button x:Name="showdeck" Grid.Row="3" Grid.Column="2" Margin="30,20,30,20" Content="show deck" Click="showdeck_Click"/>

        <Label x:Name="PocetKaretLabel" Grid.Row="3" Grid.Column="1" Margin="30,20,30,20" Content="pocet karet: 0/?" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <Button x:Name="karta1" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" Click="karta_Click"/>
        <Button x:Name="karta2" Grid.Row="1" Grid.Column="2" Margin="10,10,10,10" Click="karta_Click"/>
        <Button x:Name="karta3" Grid.Row="1" Grid.Column="3" Margin="10,10,10,10" Click="karta_Click"/>






    </Grid>
</Window>
